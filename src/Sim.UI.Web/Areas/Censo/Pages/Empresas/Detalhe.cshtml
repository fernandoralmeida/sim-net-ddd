@page
@model Sim.UI.Web.Areas.Censo.Pages.Empresas.Empresa_detalheModel
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Detalhes";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<table class="table table-light table-striped">

    <caption>Empresa</caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">CNPJ</th>
            <th scope="col">Razão Social</th>
            <th scope="col"></th>
            <th scope="col">Inicio Atividade</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>@Html.DisplayFor(modelitem => Model.Input.CNPJ)</td>
            <td>@Html.DisplayFor(modelitem => Model.Input.Empresa.RazaoSocial)</td>
            <td>@Html.DisplayFor(modelitem => Model.Input.Estabelecimento.IdentificadorMatrizFilial)</td>
            <td>@Html.DisplayFor(modelitem => Model.Input.Estabelecimento.DataInicioAtividade)</td>
        </tr>
    </tbody>
</table>

<table class="table table-light table-striped">
    <caption>Enquadramento Fiscal</caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Natureza Jurídica</th>
            <th scope="col">Porte</th>
            <th scope="col">Optante Simples</th>
            <th scope="col">Capital Social</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>@Html.DisplayFor(modelitem => Model.Input.Empresa.NaturezaJuridica) - @Html.DisplayFor(modelitem => Model.Input.NaturezaJuridica.Descricao)</td>
            <td>@Html.DisplayFor(modelitem => Model.Input.Empresa.PorteEmpresa)</td>
            <td>
                @Html.DisplayFor(modelitem => Model.Input.SimplesNacional.OpcaoSimples)
                @Html.DisplayFor(modelitem => Model.Input.SimplesNacional.OpcaoMEI)
            </td>
            <td>@Html.DisplayFor(modelitem => Model.Input.Empresa.CapitalSocial)</td>
        </tr>
    </tbody>
</table>

<table class="table table-light table-striped">
    <caption>Quadro Social</caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Identificação</th>
            <th scope="col">Nome</th>
            <th scope="col"></th>
            <th scope="col">Qualificação</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>

        @{
            int cont = 0;

        }
        @if (Model.Input.Socios != null)
        {
            foreach (var item in Model.Input.Socios)
            {

        <tr>
            <th scope="row">
                @{ cont++; }
                @cont
            </th>
            <td>@Html.DisplayFor(modelItem => item.IdentificadorSocio)</td>
            <td>@Html.DisplayFor(modelItem => item.NomeRazaoSocio)</td>
            <td>@Html.DisplayFor(modelItem => item.CnpjCpfSocio)</td>
            <td>@Html.DisplayFor(modelItem => item.QualificacaoSocio)</td>
            <td>@Html.DisplayFor(modelItem => item.FaixaEtaria)</td>
        </tr>
            }
        }
        else
        {
            <tr>
                <th scope="row">
                    @{ cont++; }
                    @cont
                </th>
                <td colspan="3">Empresa não possui quadro de sócios</td>
            </tr>
        }

    </tbody>
</table>