@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Pages/Shared/__LayoutModal.cshtml";
    }
}

<div class="container">
    @RenderBody()
</div>
<div>@DateTime.Now @User.Identity.Name</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
