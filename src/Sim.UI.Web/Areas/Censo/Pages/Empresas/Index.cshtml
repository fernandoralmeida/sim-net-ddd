@page
@using Sim.UI.Web.Areas.Censo.Pages.Empresas
@model IndexModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Lista";
    ViewData["ActivePage"] = EmpresaNavPages.Inicio;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="mt-5 mb-5">
    <form method="post">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">            
            <div class="d-flex col-2">
                    <input asp-for="Input.CNPJ" class="form-control form-control-sm me-2" aria-describedby="button-addon2" id="inputCNPJ">
                    <button class="btn btn-sm btn-outline-primary" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
                
            </div>
        </div>
    </form>
</div>
<div>
    <partial name="_EmpresaList" model="Model.Input.ListaEmpresas"/>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCNPJ').mask('00.000.000/0000-00', { placeholder: "__.___.___/____-__" });
    </script>
}
