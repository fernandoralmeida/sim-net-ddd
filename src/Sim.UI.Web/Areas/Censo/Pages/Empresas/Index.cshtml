@page
@using Sim.UI.Web.Areas.Censo.Pages.Empresas
@model IndexModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Lista";
    ViewData["ActivePage"] = EmpresaNavPages.Inicio;
}

<!--<partial name="_StatusMessage" model="Model.StatusMessage" />-->

<div class="card">
    <div class="card-title">
        <nav class="z-depth-0" style="border-bottom:solid 1px #efefef">
            <div class="nav-wrapper white">
                <form method="post">
                    <div class="input-field">
                        <input asp-for="Input.CNPJ" type="search" id="inputCNPJ" required>
                        <label class="label-icon" asp-for="Input.CNPJ"><i class="black-text material-icons">search</i></label>
                        <i class="material-icons">close</i>
                    </div>
                </form>
            </div>
        </nav>
    </div>

    <partial name="_EmpresaList" model="Model.Input.ListaEmpresas" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCNPJ').mask('00.000.000/0000-00', { placeholder: "__.___.___/____-__" });
    </script>
}
