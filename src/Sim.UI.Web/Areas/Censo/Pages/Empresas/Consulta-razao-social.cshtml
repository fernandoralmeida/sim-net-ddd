@page
@model Sim.UI.Web.Areas.Censo.Pages.Empresas.Consulta_razao_socialModel
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Lista";
    ViewData["ActivePage"] = EmpresaNavPages.ConsultaNome;
}
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="mt-5 mb-5">
    <form method="post">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <div class="col-md-2">
                <select asp-for="Input.Municipio" placeholder="Municipio" class="form-select" asp-items="@Model.ListaMunicipios"></select>
            </div>
            <div class="col-md-auto">
                <div class="input-group">
                    <span class="input-group-text">Razão Social</span>
                    <input asp-for="Input.RazaoSocial" class="form-control" placeholder="Razão Social" aria-describedby="button-addon2">
                    <button class="btn btn-primary" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>
<div>

    <partial name="_EmpresaList" model="Model.Input.ListaEmpresas" />
  
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCNPJ').mask('00.000.000/0000-00', { placeholder: "__.___.___/____-__" });
    </script>
}