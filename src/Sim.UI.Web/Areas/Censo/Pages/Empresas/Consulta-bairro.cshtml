<div class="card">
    <form method="post" class="row" style="border-bottom:solid 1px #efefef;">
        <div class="col m6 l6 s12">
            <nav class="z-depth-0">
                <div class="nav-wrapper white">
                    <div class="input-field">
                        <input asp-for="Input.Bairro" type="search" required>
                        <label class="label-icon" asp-for="Input.Bairro"><i class="black-text material-icons">search</i></label>
                        <i class="material-icons">close</i>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col valign-wrapper" style="height:64px;">
            <div class="col">
                <select asp-for="Input.Municipio" class="browser-default" asp-items="@Model.ListaMunicipios"></select>
            </div>
            <div class="col">
                <select asp-for="Input.Situacao" class="browser-default">
                    <option selected>Ativa</option>
                    <option>Nula</option>
                    <option>Suspensa</option>
                    <option>Inapta</option>
                    <option>Baixada</option>
                </select>
            </div>
            <div class="col">
                <button class="btn waves-effect waves-green" type="submit" role="button"><i class="material-icons">search</i></button>
            </div>            
        </div>
    </form>
    <partial name="_EmpresaList" model="Model.Input.ListaEmpresas" />
</div>