@page
@model Sim.UI.Web.Areas.Censo.Pages.Empresas.Consulta_bairroModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Lista";
    ViewData["ActivePage"] = EmpresaNavPages.ConsultaNome;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="mt-5 mb-5">
    <form method="post">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <div class="d-flex">
                <select asp-for="Input.Municipio" placeholder="Municipio" class="form-select me-2" asp-items="@Model.ListaMunicipios"></select>
                <input asp-for="Input.Bairro" placeholder="Bairro" class="form-control me-2" aria-describedby="button-addon2" />                
                <select asp-for="Input.Situacao" class="form-select me-2">
                    <option selected>Ativa</option>
                    <option>Nula</option>
                    <option>Suspensa</option>
                    <option>Inapta</option>
                    <option>Baixada</option>
                </select>
                <button class="btn btn-outline-primary" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </form>
</div>
<div>
    <partial name="_EmpresaList" model="Model.Input.ListaEmpresas" />
</div>