@using Sim.Domain.Cnpj.Entity;
@model IEnumerable<BaseReceitaFederal>

<table class="table table-striped">
    <caption>Lista de empresas @if (Model != null) Model.Count();</caption>
    <thead>
        <tr>
            <th>#</th>
            <th>
                CNPJ
            </th>

            <th>
                Nome Empresarial
            </th>

            <th>
                Porte
            </th>

            <th>
                Situação
            </th>

            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @{
            int cont = 0;
        }

        @if (Model != null)
        { 

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{ cont++; }
                    @cont
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.RazaoSocial)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.PorteEmpresa)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Estabelecimento.SituacaoCadastral)
                </td>
                <td>
                    <a asp-page="./Detalhe" asp-route-id="@item.CNPJ" class="btn btn-sm btn-secondary" title="Ver informações"><i class="fas fa-eye"></i></a>
                </td>
            </tr>
        }
        }
    </tbody>
</table>
