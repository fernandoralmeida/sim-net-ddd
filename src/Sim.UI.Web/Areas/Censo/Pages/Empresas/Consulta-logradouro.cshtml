@page
@model Sim.UI.Web.Areas.Censo.Pages.Empresas.Consulta_logradouroModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Lista";
    ViewData["ActivePage"] = EmpresaNavPages.ConsultaNome;
}

<!--<partial name="_StatusMessage" model="Model.StatusMessage" />-->

<form class="section" method="post">
    <div class="row">
        <div class="col s12">
            <div class="col s12 m3 l3">
                <div class="input-field">
                    <select asp-for="Input.Municipio" asp-items="@Model.ListaMunicipios"></select>
                    <label asp-for="Input.Municipio"></label>
                </div>
            </div>
            <div class="col s12 m4 l4">
                <div class="input-field">
                    <input asp-for="Input.Logradouro" />
                    <label asp-for="Input.Logradouro"></label>
                </div>
            </div>
            <div class="col s12 m3 l3">
                <div class="input-field">
                    <select asp-for="Input.Situacao">
                        <option selected>Ativa</option>
                        <option>Nula</option>
                        <option>Suspensa</option>
                        <option>Inapta</option>
                        <option>Baixada</option>
                    </select>
                    <label asp-for="Input.Situacao"></label>
                </div>
            </div>
            <div class="col s12 m2 l2">
                <div class="input-field">
                    <button class="btn waves-effect" type="submit" role="button"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="card">
    <partial name="_EmpresaList" model="Model.Input.ListaEmpresas" />
</div>
