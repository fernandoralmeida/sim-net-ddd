@page
@model Sim.UI.Web.Areas.Censo.Pages.Empresas.Consulta_logradouroModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Lista";
    ViewData["ActivePage"] = EmpresaNavPages.ConsultaNome;
}

<!--<partial name="_StatusMessage" model="Model.StatusMessage" />-->

<div class="card">
    <form method="post" class="row" style="border-bottom:solid 1px #efefef; margin-bottom:0px;">
        <nav class="z-depth-0">
            <div class="nav-wrapper white">
                <div class="input-field col s3 m6 l6">
                    <input asp-for="Input.Logradouro" placeholder="Digite o Endereço" type="search" required>
                    <label class="label-icon" asp-for="Input.Logradouro"><i class="black-text material-icons">search</i></label>
                </div>
                <div class="input-field col s3 m2 l2 valign-wrapper">
                    <select asp-for="Input.Municipio" class="browser-default" asp-items="@Model.ListaMunicipios"></select>
                </div>
                <div class="input-field col s3 m2 l2 valign-wrapper">
                    <select asp-for="Input.Situacao" class="browser-default">
                        <option selected>Ativa</option>
                        <option>Nula</option>
                        <option>Suspensa</option>
                        <option>Inapta</option>
                        <option>Baixada</option>
                    </select>
                </div>
                <button class="input-field btn waves-effect z-depth-0 waves-light right" type="submit" name="action">Pesquisar</button>
            </div>
        </nav>
    </form>
    <partial name="_EmpresaList" model="Model.Input.ListaEmpresas" />
</div>
