@page
@model Sim.UI.Web.Areas.Censo.Pages.Simples.Consulta_cnaeModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Simples Nacional";
    ViewData["ActivePage"] = EmpresaNavPages.Simples;
}

<!--<partial name="_StatusMessage" model="Model.StatusMessage" />-->

<div class="card">
    <form method="post" class="row" style="border-bottom:solid 1px #efefef; margin-bottom:0px;">
        <div class="col s12 m6 l6 valign-wrapper left" style="height:64px;">
            <div class="col s12">
                <select asp-for="Input.CNAE" class="browser-default" asp-items="@Model.ListaCnaes">
                    <option selected>-- Atividade --</option>
                </select>
            </div>
        </div>
        <div class="col valign-wrapper" style="height:64px;">
            <div class="col">
                <select asp-for="Input.Municipio" class="browser-default" asp-items="@Model.ListaMunicipios"></select>
            </div>
            <div class="col">
                <select asp-for="Input.OptanteSimples" class="browser-default" >
                    <option value="opsimples" selected>Optante Simples</option>
                    <option value="opsimplesnaomei">Optante Não MEI</option>
                    <option value="opmei">Optante MEI</option>
                    <option value="excsimples">Exclusão do Simples</option>
                </select>
            </div>
            <div class="col">
                <select asp-for="Input.Situacao" class="browser-default">
                    <option selected>Ativa</option>
                    <option>Nula</option>
                    <option>Suspensa</option>
                    <option>Inapta</option>
                    <option>Baixada</option>
                </select>
            </div>
            <div class="col">
                <button class="btn waves-effect waves-green" type="submit" role="button"><i class="material-icons">search</i></button>
            </div>
        </div>
    </form>
    <partial name="./Empresas/_EmpresaList" model="Model.Input.ListaEmpresas" />

</div>
