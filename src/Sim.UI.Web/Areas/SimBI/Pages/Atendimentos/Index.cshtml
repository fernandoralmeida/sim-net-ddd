@page
@model Sim.UI.Web.Areas.SimBI.Pages.Atendimentos.IndexModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">

    <div class="col s12 m12 l12">
        <ul class="collection with-header z-depth-1">
            <li class="collection-header"><h6>Geral</h6></li>
            @foreach (var item in Model.Input.Atendimentos)
            {
                <li class="collection-item"><span class="new badge red" data-badge-caption="@item.Value"></span>@Html.DisplayFor(modelItem => item.Key)</li>
            }
            @foreach (var item in Model.Input.Servicos)
            {
                <li class="collection-item"><span class="new badge blue" data-badge-caption="@item.Value"></span>@Html.DisplayFor(modelItem => item.Key)</li>
            }
        </ul>
    </div>

    <div class="col s12 m12 l6">
        <ul class="collection with-header z-depth-1">
            @foreach (var item in Model.ListaPAT.Atendimentos)
            {
                <li class="collection-header"><h6>PAT</h6><span class="new badge red" data-badge-caption="@item.Value"></span></li>
                <li class="collection-item"><span class="new badge red" data-badge-caption="@item.Value"></span>@Html.DisplayFor(modelItem => item.Key)</li>
            }
            @foreach (var item in Model.ListaPAT.Servicos)
            {
                <li class="collection-item"><span class="new badge green" data-badge-caption="@item.Value"></span>@Html.DisplayFor(modelItem => item.Key)</li>
            }
        </ul>
    </div>

    <div class="col s12 m12 l6">
        <ul class="collection with-header z-depth-1">

            @foreach (var item in Model.ListaBPP.Atendimentos)
