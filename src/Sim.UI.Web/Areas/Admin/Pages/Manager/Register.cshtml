@page
@model Sim.UI.Web.Areas.Admin.Pages.Manager.RegisterModel
@{ Layout = "_Layout.cshtml";

    ViewData["Title"] = "Contas";
    ViewData["ActivePage"] = AdminNavPages.Register;

}
<h5>Novo Usuário</h5>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <form class="col-md-6" method="post">
        <div class="row g-3">
            <!----><div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-12">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="col-md-5">
                <label asp-for="Input.Name" class="form-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="col-md-7">
                <label asp-for="Input.LastName" class="form-label"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Input.Genero" class="form-label"></label>
                <select asp-for="Input.Genero" class="form-select">
                    <option selected></option>
                    <option>Feminino</option>
                    <option>Masculino</option>
                </select>
                <span asp-validation-for="Input.Genero" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-md-10">
                <button type="submit" class="btn btn-primary col-md-4">Registrar</button>
            </div>
        </div>
    </form>

</div>
