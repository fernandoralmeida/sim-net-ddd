@page
@model Sim.UI.Web.Areas.Settings.Pages.Common.ParceirosModel
@{
    Layout = "_Layout.cshtml";

    ViewData["Title"] = "Index";
}

<div>
    <form method="post">
        <div class="col s12" hidden>
            <label asp-for="Input.Id" class="form-label"></label>
            <input asp-for="Input.Id" class="form-control" />
        </div>

        <div class="row">
            <div class="col s12">
                <div class="col s12 m3 l3">
                    <div class="input-field">
                        <input asp-for="Input.Nome" />
                        <label asp-for="Input.Nome"></label>
                    </div>
                </div>
                <div class="col s12 m3 l3">
                    <div class="input-field">
                        <select asp-for="SecretariaSelecionada" asp-items="Model.Secretarias"></select>
                        <label asp-for="Input.Secretaria"></label>
                    </div>
                </div>
                <div class="col s12 m3 l3">
                    <div class="input-field">
                        <button type="submit" asp-page-handler="Add" class="btn waves-effect">Incluir Parceiro</button>
                    </div>
                </div>
            </div>
        </div>


        <div class="card">
            <table>
                <thead>
                    <tr>
                        <th>
                            Parceiro
                        </th>
                        <th>Secretaria</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Input.Listar != null)
                    {
                        foreach (var item in Model.Input.Listar)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Secretaria.Nome)
                                </td>

                                <td>
                                    <button asp-page-handler="Remove" val asp-route-id="@item.Id" class="btn btn-small waves-effect"><i class="material-icons">delete_outline</i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>