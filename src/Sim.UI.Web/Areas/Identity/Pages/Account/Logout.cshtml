@page
@model LogoutModel
@{
    ViewData["Title"] = "Sair";
}


<div class="text-center mt-5">
    <h5 class="display-4">MSDE</h5>    

    @{if (User.Identity.IsAuthenticated)
        {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <p class="text-center">
                Módulo Desenvolvimento Econômico
            </p>
            <button type="submit" class="btn btn-danger">Sair do Sim.Web</button>
        </form>
        }
        else
        {
            <p>Você saiu do aplicativo com sucesso.</p>
        }
    }

</div>


