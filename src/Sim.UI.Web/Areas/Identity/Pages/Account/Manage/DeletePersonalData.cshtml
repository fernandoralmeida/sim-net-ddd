@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Apagar Dados Pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h5>@ViewData["Title"]</h5>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>A exclusão desses dados removerá permanentemente sua conta, e isso não pode ser recuperado.</strong>
    </p>
</div>


<div>
    <form id="delete-user" method="post" class="row g-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="col-md-6">
                <label asp-for="Input.Password" class="form-label" for="floatingSenha"></label>
                <input asp-for="Input.Password" class="form-control" id="floatingSenha" />
            </div>
        }
        
        <div class="d-grid gap-2 d-md-block">
            <button class="btn btn-danger" type="submit">Excluir dados e fechar minha conta</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}