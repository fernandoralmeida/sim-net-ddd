@page
@model Disable2faModel
@{
    ViewData["Title"] = "Desative a autenticação de dois fatores (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h5>@ViewData["Title"]</h5>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Esta ação apenas desativa 2FA.</strong>
    </p>
    <p>
        Desativar 2FA não altera as chaves usadas em aplicativos autenticadores.
        Se você deseja alterar a chave usada em um aplicativo autenticador, você deve <a asp-page="./ResetAuthenticator">redefinir as chaves do autenticador.</a>
    </p>
</div>

<div>
    <form method="post" class="row g-3">
        <button class="btn btn-danger" type="submit">Desabilitar 2FA</button>
    </form>
</div>
