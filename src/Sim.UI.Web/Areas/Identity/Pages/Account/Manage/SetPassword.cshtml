@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Configurar senha";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h5>Defina sua senha</h5>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    Você não tem um nome de usuário / senha local para este site. Adicione uma conta local
    para que você possa fazer login sem um login externo.
</p>
<div>
    
        <form class="row g-3 col-md-6" id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Definir senha</button>
        </form>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}