@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir senha";
}


<form method="post">
    <div class="card" style="margin:20px 20px 20px 20px;">
        <div class="card-header">
            Redefina sua senha
        </div>
        <div class="card-content">
            <div asp-validation-summary="ModelOnly" class="red-text" hidden></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="input-field col s12">
                <input asp-for="Input.Email" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="red-text small"></span>
            </div>
            <div class="input-field  col s12">
                <input asp-for="Input.Password" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="red-text small"></span>
            </div>
            <div class="input-field  col s12">
                <input asp-for="Input.ConfirmPassword" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="red-text small"></span>
            </div>
        </div>
        <div class="card-action">
            <button type="submit" class="btn btn-primary">Redefinir</button>
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
