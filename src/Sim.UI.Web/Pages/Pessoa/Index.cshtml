@page
@model Sim.UI.Web.Pages.Pessoa.IndexModel

@{
    ViewData["Title"] = "Clientes";
    ViewData["ActivePage"] = PessoaNavPages.Inicio;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="mt-5 mb-5">
    <form method="post">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <div class="col-md-auto">
                <div class="input-group">
                    <span class="input-group-text">CPF</span>
                    <input asp-for="Input.CPF" class="form-control" placeholder="CPF" aria-describedby="button-addon2" id="inputCPF">
                    <button class="btn btn-primary" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
                </div>
                <span asp-validation-for="Input.CPF" class="text-danger"></span>
            </div>
            @if(!Model.Input.ListaPessoas.Any())
            {
                <a asp-area="" asp-page="/Pessoa/Novo" asp-route-id="@Model.Input.RouteCPF" class="btn btn-primary" title="Adicionar Nova Pessoa"><i class="fas fa-user-plus"></i></a>
            }            
        </div>
    </form>
</div>

<div>
    <table class="table table-light table-striped">
        <caption>Lista Pessoas (ultimos 10 cadastros)</caption>
        <thead>
            <tr>

                <th>
                    CPF
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Contato
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Input.ListaPessoas == null)
            { }
            else
            {
                foreach (var item in Model.Input.ListaPessoas)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel_Movel)
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-area="" asp-page="/Atendimento/Iniciar" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Iniciar atendimento"><i class="far fa-clock"></i></a>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary" title="Alterar informações"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
                }
            }

        </tbody>
    </table>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.cep.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCPF').mask('000.000.000-00', { placeholder: "___.___.___-__" });
    </script>
}