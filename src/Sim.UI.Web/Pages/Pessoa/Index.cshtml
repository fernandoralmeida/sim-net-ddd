@page
@model Sim.UI.Web.Pages.Pessoa.IndexModel

@{
    ViewData["Title"] = "Clientes";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="mt-5 mb-5">
    <form method="post">
        <div class="row justify-content-center">
            <div class="col-md-auto">
                <div class="input-group">
                    <a asp-area="" asp-page="/Pessoa/Novo" class="btn btn-info" title="Adicionar Nova Pessoa"><i class="fas fa-plus-square"></i></a>
                    <span class="input-group-text">Cliente</span>
                    <input asp-for="Input.Nome" class="form-control" placeholder="Nome" aria-describedby="button-addon2">
                    <input asp-for="Input.CPF" class="form-control" placeholder="CPF" aria-describedby="button-addon2" id="inputCPF">
                    <button class="btn btn-primary" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
                    <a href="#" class="btn btn-warning" title="Consulta Avançada"><i class="fa fa-list-alt" aria-hidden="true"></i></a>
                    <a href="#" class="btn btn-warning" title="Relatórios"><i class="fa fa-file" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <table class="table">
        <caption>Lista Pessoas</caption>
        <thead>
            <tr>
                <th></th>
                <th>
                    Nome
                </th>

                <th>
                    CPF
                </th>

                <th>
                    E-mail
                </th>

                <th>
                    Telefone
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Input.ListaPessoas == null)
            { }
            else
            {
                foreach (var item in Model.Input.ListaPessoas)
                {
                    <tr>
                        <td>
                            <a asp-area="" asp-page="/Atendimento/Iniciar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Iniciar atendimento"><i class="far fa-clock"></i></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CPF)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Tel_Movel)
                        </td>

                        <td>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Detalhar informações"><i class="far fa-list-alt"></i></a>

                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Alterar informações"><i class="far fa-edit"></i></a>

                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Excluir informações"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.cep.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCPF').mask('000.000.000-00', { placeholder: "___.___.___-__" });
    </script>
}