@page
@model Sim.UI.Web.Pages.Pessoa.ConsultaNomeModel
@{
    ViewData["Title"] = "Consulta por Nome";
    ViewData["ActivePage"] = PessoaNavPages.ConsultaNome;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="mt-5 mb-5">
    <form method="post">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            
                <div class="d-flex">
                    <input asp-for="Input.Nome" placeholder="Nome" class="form-control form-control-sm me-2" aria-describedby="button-addon2">
                    <button class="btn btn-sm btn-outline-primary" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
                </div>
        </div>
    </form>
</div>

<div>
    <table class="table table-striped">
        <caption>Lista Pessoas</caption>
        <thead>
            <tr>
                <th></th>
                <th>
                    CPF
                </th>

                <th>
                    Nome
                </th>

                <th>
                    Contato
                </th>

                <th>Ação</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Input.ListaPessoas == null)
            { }
            else
            {
                foreach (var item in Model.Input.ListaPessoas)
                {
                    <tr>
                        <td>
                            <a asp-area="" asp-page="/Atendimento/Iniciar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Iniciar atendimento"><i class="far fa-clock"></i></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CPF)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Tel_Movel)
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Alterar informações"><i class="fas fa-pen"></i></a>                           
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.cep.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCPF').mask('000.000.000-00', { placeholder: "___.___.___-__" });
    </script>
}
