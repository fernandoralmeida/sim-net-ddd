@page
@model Sim.UI.Web.Pages.Agenda.IndexModel
@{
    ViewData["Title"] = "Eventos";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="card">
    <form method="post" class="row valign-wrapper">
        <div class="input-field col s4 m3 l2 valign-wrapper">
            <input asp-for="Input.Ano" required>
            <label asp-for="Input.Ano"></label>
        </div>
        <div class="input-field col s8 m5 l4 valign-wrapper">
            <input asp-for="Input.Evento" placeholder="Nome Evento">
            <button class="btn waves-effect waves-light"><i class="material-icons">search</i></button>
        </div>
        <div class="col s12 m4 l6 right-align">
            <button class="btn btn-floating waves-effect waves-light green" asp-page-handler="EventAvailable"><i class="material-icons">event_available</i></button>
            <button class="btn btn-floating waves-effect waves-light materialize-red" asp-page-handler="OldEvent"><i class="material-icons">event_repeat</i></button>
        </div>
    </form>
</div>

<partial name="_AgendaList" model="Model.Input.ListaEventos" />

<!-- Modal -->
<div class="modal fade" id="viewmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="viewmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="viewmodalLabel">Detalhes</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="viewmodalData"></p>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(".viewbutton").on("click", function () {
            var customerId = $(this).data('id');
            var secao = $(this).data('secao');
            var acao = $(this).data('acao');
            $.ajax({
                url: "/" + secao + "/" + acao + "?id=" + customerId,
                cache: false
            }).done(function (data) {
                $("#viewmodalData").html(data);
            });
        });</script>
}
