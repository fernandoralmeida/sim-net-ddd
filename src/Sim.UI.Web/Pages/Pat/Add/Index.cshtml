@page
@model Sim.UI.Web.Pages.Pat.Add.IndexModel
@{
    ViewData["Title"] = "Nova Vaga de Emprego";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form class="row" method="post">
    <section>
        <div class="card">
            <div class="row">
                <div class="col s12">
                    <div class="col s12" hidden>
                        <label asp-for="Input.Id"></label>
                        <input asp-for="Input.Id" />
                    </div>
                    
                        <div class="input-field col s12 m6 l4 valign-wrapper">
                            <input asp-for="Input.Empresa.CNPJ" id="inputCNPJ">
                            <label asp-for="Input.Empresa.CNPJ" for="inputCNPJ"></label>           
                            <button asp-page-handler="RWS" class="btn waves-effect" type="submit"><i class="material-icons">search</i></button>
                        </div>
                                            
                        <div class="input-field col s12 m6 l8">
                            <input asp-for="Input.Empresa.Nome_Empresarial" id="inputAbertura" />
                            <label asp-for="Input.Empresa.Nome_Empresarial" for="inputAbertura"></label>
                        </div>
                        
                        <div class="input-field col s3 m3 l2">
                            <input asp-for="Input.Empresa.CNAE_Principal" id="inputAbertura" />
                            <label asp-for="Input.Empresa.CNAE_Principal" for="inputAbertura"></label>
                        </div>

                        <div class="input-field col s9 m9 l10">
                            <input asp-for="Input.Empresa.Atividade_Principal" id="inputAbertura" />
                            <label asp-for="Input.Empresa.Atividade_Principal" for="inputAbertura"></label>
                        </div>
                    
                </div>
            </div>
        </div>
    </section>
</form>