@using Microsoft.AspNetCore.Identity
@using Sim.Cross.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-flex">
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" title="Logout">Sair</a>

                <!--
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link">Sair</button>
                </form>-->
            </li>
        }
        else
        {
            if (User.IsInRole("Administrador"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
            </li>
        }
    </ul>
</div>
