
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIM - @ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/favicon.ico" />
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css
    <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css" />-->
    <link rel="stylesheet" href="~/lib/materialize/css/dashboard.materialize.css" />

    <!--   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">-->
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body class="has-fixed-sidenav">
    <header>

        <ul id="sidenav-left" class="sidenav sidenav-fixed teal lighten-4">
            <li>
                <a asp-area="" asp-page="/Index" class="logo-container">SEDEMP<i class="material-icons">widgets</i></a>
            </li>
            <li class="no-padding">
                <ul class="collapsible collapsible-accordion transparent">
                    <partial name="_LoginPartial" />
                    <li class="bold waves-effect">
                        <a class="collapsible-header">Inicio<i class="material-icons chevron">chevron_left</i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li><a href="#" class="waves-effect active">PAT<i class="fas fa-industry"></i></a></li>
                                <li><a href="#" class="waves-effect"><i class="fas fa-hand-holding-usd"></i>Banco do Povo</a></li>
                                <li><a class="waves-effect" asp-area="" asp-page="/SebraeAqui/Index"><i class="fas fa-handshake"></i>Sebrae Aqui</a></li>
                                <li><a href="#" class="waves-effect"><i class="fas fa-building"></i>Sala do Empreendedor</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="bold waves-effect">
                        <a class="collapsible-header">Atendimentos<i class="material-icons chevron">chevron_left</i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li><a asp-page="/Atendimento/Index" class="waves-effect">Meus Atendimentos<i class="material-icons">access_time</i></a></li>
                                <li><a asp-page="/Atendimento/Novo" class="waves-effect">Atendimento Ativo<i class="material-icons">access_alarm</i></a></li>
                                <li><a asp-page="/Atendimento/Consulta" class="waves-effect">Consultar<i class="material-icons">search</i></a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="bold waves-effect">
                        <a class="collapsible-header">Clientes<i class="material-icons chevron">chevron_left</i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li><a asp-page="/Pessoa/Index" class="waves-effect">Pessoas<i class="material-icons">group</i></a></li>
                                <li><a asp-page="/Empresa/Index" class="waves-effect">Empresas<i class="material-icons">domain</i></a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="bold waves-effect">
                        <a class="collapsible-header">Agenda<i class="material-icons chevron">chevron_left</i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li><a asp-page="/Agenda/Index" class="waves-effect">Eventos<i class="material-icons">event</i></a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="bold waves-effect">
                        <a class="collapsible-header">e-Planner<i class="material-icons chevron">chevron_left</i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li><a asp-page="/Planner/Index" class="waves-effect">Meu Planner<i class="material-icons">description</i></a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="bold waves-effect">
                        <a class="collapsible-header">Power BI<i class="material-icons chevron">chevron_left</i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li><a href="#" class="waves-effect">Atendimentos<i class="material-icons">access_time</i></a></li>
                                <li><a href="#" class="waves-effect">Empresas<i class="material-icons">domain</i></a></li>
                                <li><a href="#" class="waves-effect">Pessoas<i class="material-icons">people</i></a></li>

                            </ul>
                        </div>
                    </li>

                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="bold waves-effect">
                            <a class="collapsible-header">Configurações<i class="material-icons chevron">chevron_left</i></a>
                            <div class="collapsible-body">
                                <ul>
                                    <li><a class="waves-effect" asp-area="Settings" asp-page="/Common/Index">Sistema<i class="material-icons">settings</i></a></li>
                                    <li><a asp-area="Admin" asp-page="/Manager/Index" class="waves-effect">Contas<i class="material-icons">account_circle</i></a></li>
                                </ul>
                            </div>
                        </li>

                    }
                </ul>
            </li>
            <li>
                <div class="center">
                    &copy; @DateTime.Now.Year - Sim.Web
                    <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </li>
        </ul>
    </header>
    <main>
        <div>
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/lib/materialize/js/materialize.min.js"></script>-->
    <script type="text/javascript" src="~/lib/materialize/js/dashboard.materialize.js"></script>
    <!---->
    <script type="text/javascript" src="~/lib/masonry/masonry.pkgd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
