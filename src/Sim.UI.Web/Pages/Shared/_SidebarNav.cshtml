@using Sim.UI.Web.Pages.Shared

<ul id="sidenav-left" class="sidenav sidenav-fixed">
    <li>
        <a class="logo-container teal-text">SEDEMP<i class="material-icons teal-text left">widgets</i></a>
    </li>
    <li class="no-padding">
        <ul class="collapsible collapsible-accordion transparent">
            <li class="waves-block waves-effect @LayoutNavPages.InicioNavClass(ViewContext)" style="border-bottom:solid 1px #e0e0e0;">
                <div class="collapsible-header">Inicio</div>
                <div class="collapsible-body transparent">
                    <ul>
                        <li><a href="#" class="waves-effect">PAT</a></li>
                        <li><a href="#" class="waves-effect">Banco do Povo</a></li>
                        <li><a class="waves-effect" asp-area="" asp-page="/SebraeAqui/Index">Sebrae Aqui</a></li>
                        <li><a href="#" class="waves-effect">Sala do Empreendedor</a></li>
                    </ul>
                </div>
            </li>
            <li class="waves-block waves-effect @LayoutNavPages.AtendimentoNavClass(ViewContext)" style="border-bottom:solid 1px #e0e0e0;">
                <div class="collapsible-header">Atendimentos</div>
                <div class="collapsible-body transparent">
                    <ul>
                        <li class="@LayoutNavPages.AtendimentoDiarioNavClass(ViewContext)"><a asp-page="/Atendimento/Index" class="waves-effect">Diários<i class="material-icons">access_time</i></a></li>
                        <li class="@LayoutNavPages.AtendimentoAtivoNavClass(ViewContext)"><a asp-page="/Atendimento/Novo" class="waves-effect"><i class="material-icons">access_alarm</i>Ativo</a></li>
                        <li class="@LayoutNavPages.AtendimentoConsultaNavClass(ViewContext)"><a asp-page="/Atendimento/Consulta" class="waves-effect">Consultar<i class="material-icons">search</i></a></li>
                    </ul>
                </div>
            </li>
            <li class="waves-block waves-effect @LayoutNavPages.ClientesNavClass(ViewContext)" style="border-bottom:solid 1px #e0e0e0;">
                <div class="collapsible-header">Clientes</div>
                <div class="collapsible-body transparent">
                    <ul>
                        <li><a asp-page="/Pessoa/Index" class="waves-effect">Pessoas<i class="material-icons">group</i></a></li>
                        <li><a asp-page="/Empresa/Index" class="waves-effect">Empresas<i class="material-icons">domain</i></a></li>
                    </ul>
                </div>
            </li>
            <li class="waves-block waves-effect @LayoutNavPages.AgendaNavClass(ViewContext)" style="border-bottom:solid 1px #e0e0e0;">
                <div class="collapsible-header">Agenda</div>
                <div class="collapsible-body transparent">
                    <ul>
                        <li class="@LayoutNavPages.AgendaEventosNavClass(ViewContext)"><a asp-page="/Agenda/Index" class="waves-effect">Eventos<i class="material-icons">event</i></a></li>
                        <li class="@LayoutNavPages.AgendaPlannerNavClass(ViewContext)"><a asp-page="/Planner/Index" class="waves-effect">e-Planner<i class="material-icons">description</i></a></li>
                    </ul>
                </div>
            </li>
            <li class="waves-block waves-effect @LayoutNavPages.PowerBINavClass(ViewContext)" style="border-bottom:solid 1px #e0e0e0;">
                <div class="collapsible-header">Power BI</div>
                <div class="collapsible-body transparent">
                    <ul>
                        <li><a href="#" class="waves-effect">Atendimentos<i class="material-icons">access_time</i></a></li>
                        <li><a asp-area="Censo" asp-page="/Empresas/Index" class="waves-effect">Empresas<i class="material-icons">domain</i></a></li>
                        <li><a href="#" class="waves-effect">Pessoas<i class="material-icons">people</i></a></li>

                    </ul>
                </div>
            </li>

            @if (User.IsInRole("Administrador"))
            {
                <li class="waves-block waves-effect @LayoutNavPages.ConfiguracoesNavClass(ViewContext)" style="border-bottom:solid 1px #e0e0e0;">
                    <div class="collapsible-header">Configurações</div>
                    <div class="collapsible-body transparent">
                        <ul>
                            <li><a class="waves-effect" asp-area="Settings" asp-page="/Common/Index">Sistema<i class="material-icons">settings</i></a></li>
                            <li><a asp-area="Admin" asp-page="/Manager/Index" class="waves-effect">Contas<i class="material-icons">account_circle</i></a></li>
                        </ul>
                    </div>
                </li>

            }
            <partial name="_LoginPartial" />
        </ul>
    </li>
    <li>
        <div class="center">
            &copy; @DateTime.Now.Year - Sim.Web
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </li>
</ul>