@page
@model Sim.UI.Web.Pages.Planner.IndexModel
@{

    ViewData["Title"] = "Planner";
    ViewData["ActivePage"] = PlannerNavPages.Inicio;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />



@{
    var d1 = Model.InicioSemana.Value.ToShortDateString();
    var d2 = Model.FimSemana.Value.ToShortDateString();
}

<div class="row">
    <div class="col s12">
        <div class="card">
            <pre><span class="new badge center" data-badge-caption="@d1 à @d2">Semana de</span></pre>
        </div>
    </div>
</div>

