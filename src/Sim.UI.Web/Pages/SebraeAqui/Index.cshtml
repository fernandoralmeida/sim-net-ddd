@page
@model Sim.UI.Web.Pages.SebraeAqui.IndexModel
@{
    ViewData["Title"] = "Index";
    ViewData["ActivePage"] = SebraeAquiNavPages.Inicio;
}


<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row mt-5 mb-5" hidden>
    <form method="post">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a asp-area="" asp-page="./Iniciar" class="btn btn-primary" title="Novo Atendimento"><i class="fas fa-plus-square"></i></a>
            <div class="col-md-auto">
                <div class="input-group">
                    <span class="input-group-text">Data</span>
                    <input asp-for="Input.DataAtendimento" class="form-control" aria-describedby="button-addon2">
                    <button class="btn btn-primary" type="submit" role="button" id="button-addon2"><i class="fas fa-sync"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="card">
    <table>        
        <thead>
            <tr>
                <th>
                    N
                </th>
                <th>
                    Protocolo
                </th>
                <th>
                    Data
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    Servicos
                </th>
                <th>
                    Canal
                </th>
                <th>
                    Rae
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int cont = 0;
            }


            @foreach (var item in Model.Input.ListaAtendimento)
            {
                <tr>
                    <td>
                        @{cont++;}
                        @cont.ToString()
                    </td>
                    <td>
                        <a class="link-secondary" asp-page="./Adicionar.Rae" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Protocolo)</a>
                    </td>
                    <td>
                        @{
                            var d1 = Convert.ToDateTime(item.Data);
                            var datainicial = d1.ToShortDateString();
                        }

                        @Html.DisplayFor(modelItem => datainicial)
                    </td>
                    <td>
                        <a href="#viewmodal" class="modal-trigger viewbutton" data-secao="Pessoa" data-acao="Details" data-id="@item.Pessoa.Id">@Html.DisplayFor(modelItem => item.Pessoa.Nome)</a>
                        @if (item.Empresa != null)
                        {
                            <a href="#viewmodal" class="modal-trigger viewbutton" data-secao="Empresa" data-acao="Perfil" data-id="@item.Empresa.Id">[@item.Empresa.CNPJ]</a>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Servicos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Canal)
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sebrae.RAE)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div id="viewmodal" class="modal modal-fixed-footer">
    <div class="modal-content">
        <p id="viewmodalData"></p>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Fechar</a>
    </div>
</div>

