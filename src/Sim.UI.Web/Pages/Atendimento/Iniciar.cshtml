@page
@model Sim.UI.Web.Pages.Atendimento.IniciarModel
@{
    ViewData["Title"] = "Iniciar";
}

<div class="row">
    <div class="col-md-6 mb-2">
        <a asp-page="./Index" class="btn btn-sm btn-secondary"><i class="fas fa-arrow-left"></i></a> |
        <b>Novo Atendimento</b> @Model.Input.Protocolo
    </div>

</div>
<hr class="border" />
<partial name="_StatusMessage" model="Model.StatusMessage" />

<form method="post">
    <div class="col-md-12 mb-4">

        @if (Model.Input.Pessoa == null)
        {
            <div class="row g-2 mb-4">
                <div class="form-group col-md-3">
                    <div class="input-group ">
                        <span class="input-group-text">CPF</span>
                        <input class="form-control" asp-for="GetCPF" id="inputCPF" aria-describedby="button-addon2">
                        <button asp-page-handler="IncluirPessoa" class="btn btn-primary" type="submit"><i class="fa fa-plus-square" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row g-2 mb-4">
                <div class="col-md-2" hidden>
                    <label class="form-label" asp-for="Input.Pessoa.Id"></label>
                    <input class="form-control" asp-for="Input.Pessoa.Id" />
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="Input.Pessoa.CPF"></label>
                    <input class="form-control" asp-for="Input.Pessoa.CPF" />
                </div>
                <div class="col-md-4">
                    <label class="form-label" asp-for="Input.Pessoa.Nome"></label>
                    <input class="form-control" asp-for="Input.Pessoa.Nome" />
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="Input.Pessoa.Email"></label>
                    <input class="form-control" asp-for="Input.Pessoa.Email" />
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="Input.Pessoa.Tel_Movel"></label>
                    <input class="form-control" asp-for="Input.Pessoa.Tel_Movel" />
                </div>
                <div class="col-md">
                    <button class="btn btn-danger" type="submit" asp-page-handler="RemoverPessoa"><i class="fas fa-minus-square"></i></button>
                </div>
            </div>
        }

        @if (Model.Input.Empresa == null)
        {
            <div class="row g-2 mb-4">
                <div class="form-group col-md-3">
                    <div class="input-group ">
                        <span class="input-group-text">CNPJ</span>
                        <input class="form-control" asp-for="GetCNPJ" id="inputCNPJ" aria-describedby="button-addon2">
                        <button asp-page-handler="IncluirEmpresa" class="btn btn-primary" type="submit"><i class="fa fa-plus-square" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row g-2 mb-3">
                <div class="col-md-2" hidden>
                    <label class="form-label" asp-for="Input.Empresa.Id"></label>
                    <input class="form-control" asp-for="Input.Empresa.Id" />
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="Input.Empresa.CNPJ"></label>
                    <input class="form-control" asp-for="Input.Empresa.CNPJ" />
                </div>
                <div class="col-md-4">
                    <label class="form-label" asp-for="Input.Empresa.Nome_Empresarial"></label>
                    <input class="form-control" asp-for="Input.Empresa.Nome_Empresarial" />
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="Input.Empresa.Email"></label>
                    <input class="form-control" asp-for="Input.Empresa.Email" />
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="Input.Empresa.Telefone"></label>
                    <input class="form-control" asp-for="Input.Empresa.Telefone" />
                </div>
                <div class="col-md">
                    <button class="btn btn-danger" type="submit" asp-page-handler="RemoverEmpresa"><i class="fas fa-minus-square"></i></button>
                </div>
            </div>
        }

    </div>
    <div class="d-grid gap-2 d-md-block mb-3">
        <button asp-page-handler="Save" type="submit" class="btn btn-lg btn-success">Iniciar Atendimento</button>
    </div>
</form>

@section Scripts {
    <script src="~/js/jquery.cep.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCPF').mask('000.000.000-00', { placeholder: "___.___.___-__" });
        $('#txtphone').mask('(00) 0000-0000', { placeholder: "(__) ____-____" });
        $('#txtmobile').mask('(00) 00000-0000', { placeholder: "(__) _____-____" });
        $('#inputCNPJ').mask('00.000.000/0000-00', { placeholder: "__.___.___/____-__" });
    </script>
}