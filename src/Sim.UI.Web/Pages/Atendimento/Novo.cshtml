
@page
@model Sim.UI.Web.Pages.Atendimento.NovoModel
@{
    ViewData["Title"] = "Atendimento";
    ViewData["ActivePage"] = AtendimentoNavPages.Atendimento;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form method="post">
    <div class="col-md-12 mb-3" hidden>
        <div class="input-group">
            <span class="input-group-text">Atendimento</span>
            <input type="text" asp-for="Input.Protocolo" class="form-control" readonly>
            <input type="text" asp-for="Input.Data" class="form-control" readonly>
            <input type="text" asp-for="Input.Status" class="form-control" readonly>
            <input type="text" asp-for="Input.Id" class="form-control" readonly>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table table-striped">
            <!--<caption>Informações do Cliente</caption>-->
            <thead>
                <tr>
                    <th>
                        CPF/CNPJ
                    </th>
                    <th>
                        Pessoa/Empresa
                    </th>
                    <th>
                        Contato
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Input.Pessoa != null)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Pessoa.CPF)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Pessoa.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Pessoa.Email)

                            @Html.DisplayFor(modelItem => Model.Input.Pessoa.Tel_Movel)
                        </td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-secondary viewbutton" data-secao="Pessoa" data-acao="Details" data-id="@Model.Input.Pessoa.Id" data-bs-toggle="modal" data-bs-target="#viewmodal"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                }
                @if (Model.Input.Empresa != null)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Empresa.CNPJ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Empresa.Nome_Empresarial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Empresa.Email)

                            @Html.DisplayFor(modelItem => Model.Input.Empresa.Telefone)
                        </td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-secondary viewbutton" data-secao="Empresa" data-acao="Perfil" data-id="@Model.Input.Empresa.Id" data-bs-toggle="modal" data-bs-target="#viewmodal"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="row">
            <div class="col-md-4">
                <div class="col-mb-12 mb-2">
                    <label class="form-label" asp-for="Input.Setor" for="floatingsetor"></label>
                    <select asp-for="Input.Setor" class="form-select" asp-items="Model.Setores">
                        <option selected>-- Selecione um Setor --</option>
                    </select>
                    <span asp-validation-for="Input.Setor" class="text-danger"></span>
                </div>
                <div class="col-mb-12 mb-2">
                    <label class="form-label" asp-for="Input.Canal"></label>
                    <select asp-for="Input.Canal" class="form-select"></select>
                    <span asp-validation-for="Input.Canal" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 mb-2">
                <label class="form-label" for="floatingservico">Serviços Disponível</label>
                <select asp-for="GetServico" class="form-control" size="10"></select>

            </div>
            <div class="col-md-4 mb-2">
                <label class="form-label">Serviços Realizado</label>
                <select asp-for="ServicosSelecionados" class="form-control" size="10"></select>
                <div class="row" hidden>
                    <div class="col-md-1 mt-1">
                        <input asp-for="Input.Servicos" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md">
                        <span asp-validation-for="Input.Servicos" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Input.Descricao"></label>
            </div>
            <div class="col-md-9 mb-3">
                <textarea asp-for="Input.Descricao" class="form-control" rows="2"></textarea>
            </div>
            <div class="col-md-3">
                <div class="d-grid gap-2">
                    <button id="addbtn" type="submit" role="button" class="btn btn-primary">Finalizar<br /> Atendimento</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Modal -->
<div class="modal fade" id="viewmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="viewmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="viewmodalLabel">Detalhes</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="viewmodalData"></p>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $("#Input_Setor").on("change", function () {
                var getSetor = $(this).val();
                //get canais de atendimento
                $("#Input_Canal").empty();
                $("#Input_Canal").append("<option value=''>-- Selecione um Canal --</option>");
                $.getJSON(`?handler=Canais&getSetor=${getSetor}`, (data) => {
                    $.each(data, function (i, item) {
                        $("#Input_Canal").append(`<option value="${item.nome}">${item.nome}</option>`);
                    });
                });
                //get servicos por setor
                $("#GetServico").empty();
                $.getJSON(`?handler=Servicos&getSetor=${getSetor}`, (data) => {
                    $.each(data, function (i, item) {
                        $("#GetServico").append(`<option value="${item.nome}">${item.nome}</option>`)
                    });
                });
            });
            //adiciona serviços
            $("#GetServico").on("click", function () {
                var getServico = $(this).val();
                if (getServico !== null) {
                    $("#ServicosSelecionados").append(`<option value="${getServico}">${getServico}</option>`);
                    $(`#GetServico option[value="${getServico}"]`).remove();
                }
            });
            //revome serviços
            $("#ServicosSelecionados").on("click", function () {
                var meuServico = $(this).val();
                if (meuServico !== null) {
                    $("#GetServico").append(`<option value="${meuServico}">${meuServico}</option>`);
                    $(`#ServicosSelecionados option[value="${meuServico}"]`).remove();
                }
            });

            $("#addbtn").on("click", function () {
                var selected_val = $.map($(`#ServicosSelecionados option`), function (a) {
                    return a.value;
                }).join(';');
                document.getElementById("Input_Servicos").value = selected_val;
            });
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.validation.js"></script>
}

