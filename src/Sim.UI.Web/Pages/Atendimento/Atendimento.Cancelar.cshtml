@page
@model Sim.UI.Web.Pages.Atendimento.AtendimentoCancelarModel
@{
    ViewData["Title"] = "Atendimento";
    ViewData["ActivePage"] = AtendimentoNavPages.Atendimento;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form class="card" method="post">
    <div class="row" hidden>
        <div class="col s12">
            <span class="col">Atendimento</span>
            <input type="text" asp-for="Input.Protocolo" class="col" readonly>
            <input type="text" asp-for="Input.Data" class="col" readonly>
            <input type="text" asp-for="Input.Status" class="col" readonly>
            <input type="text" asp-for="Input.Id" class="col" readonly>
            <input type="text" asp-for="Input.Sebrae.RAE" class="col" readonly>
        </div>
    </div>
    <div class="col s12">
        <table>
            <!--<caption>Informações do Cliente</caption>-->
            <thead>
                <tr>
                    <th>
                        CPF/CNPJ
                    </th>
                    <th>
                        Pessoa/Empresa
                    </th>
                    <th>
                        Contato
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Input.Pessoa != null)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Pessoa.CPF)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Pessoa.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Pessoa.Email)

                            @Html.DisplayFor(modelItem => Model.Input.Pessoa.Tel_Movel)
                        </td>
                    </tr>
                }
                @if (Model.Input.Empresa != null)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Empresa.CNPJ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Empresa.Nome_Empresarial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.Empresa.Email)

                            @Html.DisplayFor(modelItem => Model.Input.Empresa.Telefone)
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="row">
            <div class="col s6 m6 l6">
                <div class="input-field">
                    <input asp-for="MotivoCancelamento" multiple />
                    <label asp-for="MotivoCancelamento"></label>
                </div>
            </div>
            <div class="col">
                <div class="input-field">
                    <button type="submit" role="button" class="btn waves-effect">Cancelar Atendimento</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.validation.js"></script>
}
