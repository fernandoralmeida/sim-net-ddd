@page
@model Sim.UI.Web.Pages.Atendimento.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h5>Lista de Atendimentos</h5>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<hr />
<pre>Data do Atendimento</pre>

<div class="row mb-3">
    <div style="margin:auto; width:300px;">
        <form method="post">
            <div class="col-md-12">
                <div class="input-group mb-3">
                    <input asp-for="Input.DataAtendimento" class="form-control" placeholder="Nome" aria-describedby="button-addon2">
                    <button class="btn btn-primary" type="submit" role="button" id="button-addon2"><i class="fas fa-sync"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <table class="table table-borderless bg-white">
        <caption>Lista de atendimentos!</caption>
        <thead>
            <tr class="border-bottom shadow-sm">
                <th>
                    N
                </th>
                <th>
                    Protocolo
                </th>
                <th>
                    Horário
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    Servicos
                </th>
                <th>
                    Setor
                </th>
                <th>
                    Canal
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @{ 
                int cont = 0;
            }


            @foreach (var item in Model.Input.ListaAtendimento)
            {
                <tr class="border-bottom">
                    <td>
                        @{cont++;}
                        @cont.ToString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Protocolo)
                    </td>
                    <td>
                        @{ 
                            var d1 = Convert.ToDateTime(item.Data);
                            var d2 = Convert.ToDateTime(item.DataF);
                            var datainicial = d1.ToShortTimeString();
                            var datafinal = d2.ToShortTimeString();
                        }

                        @Html.DisplayFor(modelItem => datainicial)
                        @Html.DisplayFor(modelItem => datafinal)
                    </td>
                    <td>
                        <a asp-page="/Pessoa/Details" asp-route-id="@item.Pessoa.Id" class="btn-link"> @Html.DisplayFor(modelItem => item.Pessoa.Nome)</a>                       
                        <p>@Html.DisplayFor(modelItem => item.Empresa.Nome_Empresarial)</p>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Servicos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Setor)
                    <td>
                        @Html.DisplayFor(modelItem => item.Canal)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>