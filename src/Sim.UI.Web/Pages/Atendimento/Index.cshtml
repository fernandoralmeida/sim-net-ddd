@page
@model Sim.UI.Web.Pages.Atendimento.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h5>Atendimentos</h5>
<hr class="row"/>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div style="margin:auto; width:500px;">
        <form method="post">
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group mb-3">
                        <span class="input-group-text">Data</span>
                        <input asp-for="Input.DataAtendimento" class="form-control" placeholder="Nome" aria-describedby="button-addon2">
                        <button class="btn btn-primary" type="submit" role="button" id="button-addon2"><i class="fas fa-sync"></i></button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group mb-3">
                        <a asp-area="" asp-page="./Iniciar" class="btn btn-success" title="Novo Atendimento"><i class="fas fa-plus-square"></i></a>
                        <a asp-area="" asp-page="./Consulta" class="btn btn-primary" title="Consultar"><i class="fas fa-search"></i></a>
                        <a class="btn btn-primary" title="Relatórios"><i class="fas fa-clipboard-list"></i></a>
                    </div>
                </div>  
            </div>
        </form>
    </div>
</div>

<div class="row">
    <table class="table table-borderless">
        <caption>Lista de atendimentos!</caption>
        <thead>
            <tr class="border-bottom shadow-sm">
                <th>
                    N
                </th>
                <th>
                    Protocolo
                </th>
                <th>
                    Horário
                </th>
                <th>
                    Cliente
                </th>
                <th width="180px">
                    Servicos
                </th>
                <th>
                    Setor
                </th>
                <th>
                    Canal
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int cont = 0;
            }


            @foreach (var item in Model.Input.ListaAtendimento)
            {
                <tr class="border-bottom">
                    <td>
                        @{cont++;}
                        @cont.ToString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Protocolo)
                    </td>
                    <td>
                        @{
                            var d1 = Convert.ToDateTime(item.Data);
                            var d2 = Convert.ToDateTime(item.DataF);
                            var datainicial = d1.ToShortTimeString();
                            var datafinal = d2.ToShortTimeString();
                        }

                        @Html.DisplayFor(modelItem => datainicial)
                        @Html.DisplayFor(modelItem => datafinal)
                    </td>
                    <td>
                        <a href="#" class="link-secondary viewbutton" data-secao="Pessoa"  data-acao="Details" data-id="@item.Pessoa.Id" data-bs-toggle="modal" data-bs-target="#viewmodal">@Html.DisplayFor(modelItem => item.Pessoa.Nome)</a>
                        @if (item.Empresa != null)
                        {
                            <a href="#" class="link-secondary viewbutton" data-secao="Empresa"  data-acao="Perfil" data-id="@item.Empresa.Id" data-bs-toggle="modal" data-bs-target="#viewmodal">[@item.Empresa.CNPJ]</a>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Servicos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Setor)
                    <td>
                        @Html.DisplayFor(modelItem => item.Canal)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" title="Alterar informações"><i class="far fa-edit"></i></a>
                        <a class="btn btn-sm btn-outline-danger" title="Excluir informações"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="viewmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="viewmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="viewmodalLabel">Detalhes</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="viewmodalData"></p>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
    $(".viewbutton").on("click", function () {
        var customerId = $(this).data('id');
        var secao = $(this).data('secao');
        var acao = $(this).data('acao');
            $.ajax({
                url: "/"+ secao +"/" + acao + "?id=" + customerId,
                cache: false
            }).done(function (data) {
                var formatHtml = data;
                $("#viewmodalData").html(formatHtml);
            });
        });</script>
}