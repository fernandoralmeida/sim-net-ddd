    <table class="responsive-table">
        <thead>
            <tr>
                <th></th>
                <th>
                    CNPJ
                </th>

                <th>
                    Nome Empresarial
                </th>

                <th>
                    Tel
                </th>

                <th>
                    E-mail
                </th>
                <th>
                    Situação
                </th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @{
                int cont = 0;
            }

            @foreach (var item in Model.Input.ListaEmpresasRFB)
            {
            <tr>
                <td>
                    @{ cont++; }
                    @cont
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.RazaoSocial)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Estabelecimento.DDD1) @Html.DisplayFor(modelItem => item.Estabelecimento.Telefone1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estabelecimento.CorreioEletronico)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Estabelecimento.SituacaoCadastral)
                </th>
                <td>
                    <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-small waves-effect" title="Alterar informações"><i class="material-icons">edit</i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.mask.min.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCPF').mask('000.000.000-00');
        $('#inputCNPJ').mask('00.000.000/0000-00');
        $('#inputCNAE').mask('00.00-0-00');
    </script>
}
