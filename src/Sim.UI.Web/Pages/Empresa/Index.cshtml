@page
@model Sim.UI.Web.Pages.Empresa.IndexModel

@{
    ViewData["Title"] = "Lista";
    ViewData["ActivePage"] = EmpresaNavPages.Consulta;
}

<!--<partial name="_StatusMessage" model="Model.StatusMessage" />-->

<div class="section">
    <form method="post">
        <input asp-for="Input.CNPJRes" hidden>
        <div class="row">
            <div class="col s12">
                <div class="col s6">
                    <div class="input-field right">
                        <input asp-for="Input.CNPJ" id="inputCNPJ"/>
                        <label asp-for="Input.CNPJ" for="inputCNPJ"></label>
                    </div>
                </div>
                <div class="col s6">
                    <div class="input-field">
                        <button class="btn waves-effect" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="card">
    <table>
        <thead>
            <tr>
                <th></th>
                <th>
                    CNPJ
                </th>

                <th>
                    Nome Empresarial
                </th>

                <th>
                    Contato
                </th>

                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @{
                int cont = 0;
            }

            @foreach (var item in Model.Input.ListaEmpresas)
            {
                <tr>
                    <td>
                        @{ cont++; }
                        @cont
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNPJ)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Nome_Empresarial)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-small waves-effect" title="Alterar informações"><i class="fas fa-pen"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $('#inputCNPJ').mask('00.000.000/0000-00');
    </script>
}
