@page
@model Sim.UI.Web.Pages.Empresa.Jucesp_consulta_razaoModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Lista";
    ViewData["ActivePage"] = EmpresaNavPages.Jucesp;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="mt-5 mb-5">
    <form method="post">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <div class="col-md-1">
                <input asp-for="Input.Municipio" placeholder="Municipio" class="form-control" />              
            </div>            
            <div class="col-md-auto">
                <div class="input-group">
                    <span class="input-group-text">Razão Social</span>
                    <input asp-for="Input.RazaoSocial" class="form-control" placeholder="Razão Social" aria-describedby="button-addon2">
                    <button class="btn btn-primary" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    <partial name="_EmpresaList" model="Model.Input.ListaEmpresas" />
</div>
